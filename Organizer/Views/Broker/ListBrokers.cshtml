@model List<Organizer.Models.Broker>
@{
    ViewBag.Title = "Liste des courtiers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center" id="text1">Liste des courtiers</h2>
            @Html.ActionLink("Ajouter un courtier", "AddBroker", "Broker", new { @class = "btn btn-primary mb-2" })
            <div class="table-responsive">
                <table class="table table-hover table-dark table-bordered">
                    <tr>
                        <td>Nom</td>
                        <td>Prénom</td>
                        <td>Mail</td>
                        <td>Numéro de téléphone</td>
                    </tr>
                    @foreach (var broker in Model)
                    {
                    <tr>
                        <td>@broker.Lastname</td>
                        <td>@broker.Firstname</td>
                        <td>@broker.Mail</td>
                        <td>@broker.PhoneNumber</td>
                        <td>@Html.ActionLink("Detail", "ProfilBroker", "Broker", new { id = broker.BrokerID }, new { @class = "btn btn-dark" })</td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
